<% title "My Guests" %>
<table cellspacing="10">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Notes</th>
  </tr>
  <% for guest in current_host.guests %>
    <tr>
      <td><%= guest.name %></td>
      <td><%= guest.email %></td>
	  <td><%= guest.notes %></td>
	  <td><%= link_to "Show", guest %></td>
	  <td><%= link_to "Edit", edit_guest_path(guest) %></td>
	  <td><%= link_to "Destroy", guest, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Guest", new_guest_path %></p>
