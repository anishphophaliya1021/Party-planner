<% title "Party" %>

<p>
  <strong>Party Type:</strong>
  <%= @party.party_type.name %>
</p>
<p>
  <strong>Name:</strong>
  <%= @party.name %>
</p>
<p>
  <strong>Location:</strong>
  <%= @party.location.name %>
</p>
<p>
  <strong>Date:</strong>
  <%= @party.date.strftime("%m/%d/%Y") %>
</p>
<p>
  <strong>Start Time:</strong>
  <%= @party.start_time.strftime("%I:%M%p") %>
</p>
<p>
  <strong>End Time:</strong>
  <%= @party.end_time.strftime("%I:%M%p") %>
</p>
<p>
  <strong>Description:</strong>
  <%= @party.description %>
</p>
<p>
  <strong>Rsvp Date:</strong>
  <%= @party.rsvp_date.strftime("%m/%d/%Y") %>
</p>

<p>
  <%= link_to "Edit", edit_party_path(@party) %> |
  <%= link_to "Destroy", @party, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", parties_path %>
</p>
