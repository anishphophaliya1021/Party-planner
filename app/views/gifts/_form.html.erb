<%= form_for @gift do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :invitation_id %><br />
    <%= f.text_field :invitation_id %>
  </p>
  <p>
    <%= f.label :note_sent_on %><br />
    <%= f.date_select :note_sent_on %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit %></p>
<% end %>
