<% semantic_form_for(@party) do |p| %>
	<%= p.inputs do %>
		<%= p.input :name, :required => true %>
	<%= p.input :location_id, :as => :select, :collection => current_host.locations.all, :required => true %>	
		<a href=/locations/new target="_blank">Add New Location</a>
		<%= p.input :party_type_id, :as => :select, :collection => PartyType.all, :required => true%>
		<%= p.input :date, :required => true,:order => [:month, :day, :year], :start_year => 2011, :end_year => 2021 %>
		<%= p.input :rsvp_date, :order => [:month, :day, :year], :start_year => 2011%>
		<%= p.input :start_time %><br>
		<%= p.input :end_time %>
		<%= p.input :description%>
	<% end %>
	<%= p.buttons %>
<% end %>


