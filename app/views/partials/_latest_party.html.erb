<div id = "latest_party">
<table cellpadding= "5";>
  <tr>
    <th>PartyType</th>
    <th>Name</th>
    <th>Location</th>
    <th>Date</th>
    <th>Start Time</th>
    <th>Rsvp Date</th>
    <th>Confirmed Guests</th>
  </tr>
  <%# I am using it here!!!!! %>
  <% for party in current_host.parties.mostRecent.limit(1) %>
    <tr>
      <td><%= party.party_type.name %></td>
      <%# party.host_id %>
      <td><%= party.name %></td>
      <td><%= party.location.name %></td>
      <td><%= party.date.strftime("%m/%d/%Y") %></td>
      <td><%= party.start_time.strftime("%I:%M%p") %></td>
      <td><%= party.rsvp_date.strftime("%m/%d/%Y") %></td>
      <td><%= party.confirmed_attendees %></td>
      <td><%= link_to "Show", party %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add New Party", new_party_path %>
&nbsp <%= link_to "View All Parties", parties_path%></p>
</div>