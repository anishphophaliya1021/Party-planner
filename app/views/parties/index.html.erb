<% title "Parties" %>
<table cellpadding= "5";>
  <tr>
    <th>PartyType</th>
    <th>Name</th>
    <th>Location</th>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Description</th>
    <th>Rsvp Date</th>
  </tr>
  <%# I am using it here!!!!! %>
  <% for party in current_host.parties %>
    <tr>
      <td><%= party.party_type.name %></td>
      <%# party.host.name %>
      <td><%= party.name %></td>
      <td><%= party.location.name %></td>
      <td><%= party.date.strftime("%m/%d/%Y") %></td>
      <td><%= party.start_time.strftime("%I:%M%p") %></td>
      <td><%= party.end_time.strftime("%I:%M%p") %></td>
      <td><%= party.description %></td>
      <td><%= party.rsvp_date.strftime("%m/%d/%Y") %></td>
      <td><%= link_to "Show", party %></td>
      <td><%= link_to "Edit", edit_party_path(party) %></td>
      <td><%= link_to "Destroy", party, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Party", new_party_path %></p>
